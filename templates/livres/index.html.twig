{% extends 'base.html.twig' %}

{% block title %}Hello LivresController!
{% endblock %}

{% block body %}

	<h1>Liste des livres</h1>
	<table class="table table-hover table-striped table-bordered text-center">
		<thead class="table-primary">
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>ISBN</th>
				<th>Editeur</th>
				<th>Date Creation</th>
				<th>Prix</th>
				<th colspan="3">Actions</th>

			</tr>
		</thead>
		<tbody>
			{% for livre in livres %}
				<tr>
					<td>{{ livre.id }}</td>
					<td>{{ livre.titre }}</td>
					<td>{{ livre.isbn }}</td>
					<td>{{ livre.editeur }}</td>
					<td>{{ livre.editedAt|date('M d, Y') }}</td>
					<td>{{ livre.prix  }}DT</td>
					<td>
						<a href="{{ url('admin_livres_show', {'id': livre.id}) }}" class="btn btn-info">Show</a>
					</td>

					<td>
						<a {# href="{{ url('livres_delete', {'id': livre.id}) }}" #} class="btn btn-danger">Delete</a>
					</td>
					<td>
						<a {# href="{{ url('livres_update', {'id': livre.id}) }}" #} class="btn btn-warning">Update</a>
					</td>

				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
